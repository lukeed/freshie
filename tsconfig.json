{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "sourceMap": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "freshie": ["./packages/freshie/index.d.ts"]
    }
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules"
  ]
}
